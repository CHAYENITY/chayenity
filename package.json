{
  "name": "archives-bia",
  "private": true,
  "version": "1.0.0",
  "author": "",
  "description": "Archives BIA",
  "license": "UNLICENSED",
  "scripts": {
    "format:mobile": "cd mobile && dart format .",
    "lint:mobile": "cd mobile && dart analyze",
    "format:server": "cd server && poetry run black .",
    "lint:server": "cd server && poetry run ruff check . --fix",
    "format": "prettier -w . --ignore-unknown && pnpm format:mobile && pnpm format:server",
    "lint": "pnpm lint:mobile && pnpm lint:server && node scripts/cross/clean-branches.js || true",
    "prepare": "husky",
    "check:credit": "node ./scripts/cross/check-credit.js"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
